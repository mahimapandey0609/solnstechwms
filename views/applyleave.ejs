<%- include('partials/header') %>
<div class="centered">
    <div class="container">
        <section id="content" style="height: 800px; width: 600px;">
          <form action="/applyleave" method="POST">
            <h1>Apply Leave</h1>
            <div>
                <input type="number" placeholder="Employee Id"  id="username" name="empid"/>
              </div>
            <div>
              <input type="text" placeholder="Employee Name"  id="username" name="ename"/>
            </div>
            <div>
                <select name="leavetype" id="leavetype">
                    <option value="Select">Select</option>
                    <option value="Casual Leave">Casual Leave</option>
                    <option value="Eraned Leave">Eraned Leave</option>
                    <option value="Leave without pay">Leave without pay</option>
                    <option value="Maternity Leave">Maternity Leave</option>
                    <option value="Sabbatical Leave">Sabbatical Leave</option>
                    <option value="Sick Leave">Sick Leave</option>
                </select>
            </div>
            <div>
                <input type="date" placeholder="From"  id="username" name="leavefrom"/>
              </div>
              <div>
                <input type="date" placeholder="To"  id="username" name="leaveto"/>
              </div>
              <div>
                <input type="email" placeholder="Team Email ID" id="username" name="teammail"/>
              </div>

            <textarea name="reason" id="" cols="30" rows="10"></textarea>
            
            <div>
              <input type="submit" value="Submit" class="submitleave"/>
            </div>
          </form><!-- form -->
          
        </section><!-- content -->
      </div><!-- container -->
</div>

<%- include('partials/footer') %>